<p id="notice"><%= notice %></p>

<div class="header">
  <h1><%= Rails.env%> - Lista de Usuário</h1>
</div>


<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Mostrar', user %><img src="find.png"></td>
        <td><%= link_to 'Editar', edit_user_path(user) %><img src="page_white_text.png"></td>
        <td><%= link_to 'Remover', user, method: :delete, data: { confirm: 'Tem certeza que deseja remover usuário?' } %><img src="delete.png"></td>
      </tr>
    <% end %>
  </tbody>
</table>

